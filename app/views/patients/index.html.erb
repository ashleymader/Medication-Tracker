<%= render 'web_links' %>
<br/ >
<%= form_tag("/patients", method: 'get') do %>
<%= label_tag(:q, "Search for:") %>
<%= text_field_tag(:q) %>
<%= submit_tag("Search") %>
<% end %>

<h1>All Patients</h1>
    <ul>
        <% @patients.each do |patient| %> 
            <li><%= link_to patient.name, patient_path(patient) %>  </li>
        <% end %>
    </ul>


  <h2> Patients Ordered by most illnesses </h2>
    <ul>
        <% @patients.most_illnesses.each do |patient| %> 
            <li> <%= link_to patient.name, patient_path(patient) %>  -- Number of illnesses <%= patient.illnesses.count %></li>
        <% end %>
    </ul>
